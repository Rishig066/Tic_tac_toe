<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F0E3E"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn5"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage5">
        </ImageView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn1"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_above="@id/btn5"
        android:layout_toStartOf="@+id/btn2"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/buttonImage1"
            >
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn3"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_above="@id/btn5"
        android:layout_toEndOf="@+id/btn2"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage3"
            >
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn2"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/buttonImage2"
            >
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn4"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_toStartOf="@+id/btn5"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttonImage4">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn6"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_toEndOf="@+id/btn5"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/buttonImage6">
        </ImageView>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="8dp"
        android:id="@+id/LineH1"
        android:layout_centerHorizontal="true"
        android:background="#ABF4F2EF"
       android:layout_above="@+id/btn5"
        android:layout_marginBottom="8dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="8dp"
        android:id="@+id/LineH2"
        android:layout_centerHorizontal="true"
        android:background="#ABF4F2EF"
        android:layout_below="@+id/btn5"
        android:layout_marginTop="8dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="310dp"
        android:id="@+id/LineV3"
        android:layout_centerVertical="true"
        android:background="#ABF4F2EF"
        android:layout_alignStart="@id/btn5"
        android:layout_marginStart="-14dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="310dp"
        android:id="@+id/LineV4"
        android:layout_centerVertical="true"
        android:background="#ABF4F2EF"
        android:layout_alignEnd="@id/btn5"
        android:layout_marginEnd="-14dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn8"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/buttonImage8"
            android:layout_width="match_parent"

            android:layout_height="match_parent"></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn7"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_toStartOf="@+id/btn8"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/buttonImage7"
            >
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/btn9"
        android:layout_centerInParent="true"
        android:background="#1F0E3E"
        android:layout_toEndOf="@+id/btn8"
        android:layout_below="@+id/btn6"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/buttonImage9"
            >
        </ImageView>

    </RelativeLayout>


    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/Reset"
        android:textColor="@color/white"
        android:textSize="16sp">

    </Button>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="40dp"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/scoreX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score X : 0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/scoreY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score O : 0"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

</RelativeLayout>